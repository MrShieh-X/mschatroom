<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.screen.RegisterScreen"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_reg_input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:layout_marginStart="50px"
        android:layout_marginLeft="50px"
        android:layout_marginEnd="50px"
        android:layout_marginRight="50px">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/reg_input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edittexthint_reg_input_email"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:digits="qwertyuiopasdfghjklzxcvbnm1234567890_-QWERTYUIOPASDFGHJKLZXCVBNM@."
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_reg_input_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50px"
        android:layout_marginLeft="50px"
        android:layout_marginEnd="50px"
        android:layout_marginRight="50px">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/reg_input_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:digits="qwertyuiopasdfghjklzxcvbnm1234567890_QWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="@string/edittexthint_input_account"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_reg_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50px"
        android:layout_marginLeft="50px"
        android:layout_marginEnd="50px"
        android:layout_marginRight="50px">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/reg_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="@string/edittexthint_input_password"
            android:digits="qwertyuiopasdfghjklzxcvbnm1234567890_QWERTYUIOPASDFGHJKLZXCVBNM"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_reg_input_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50px"
        android:layout_marginLeft="50px"
        android:layout_marginEnd="50px"
        android:layout_marginRight="50px">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/reg_input_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edittexthint_reg_confirm_password"
            android:singleLine="true"
            android:digits="qwertyuiopasdfghjklzxcvbnm1234567890_QWERTYUIOPASDFGHJKLZXCVBNM"
            />
    </com.google.android.material.textfield.TextInputLayout>



            <CheckBox
                android:id="@+id/reg_show_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50px"
                android:layout_marginLeft="50px"
                android:layout_marginEnd="50px"
                android:layout_marginRight="50px"
                android:layout_marginTop="30px"
                android:text="@string/checkbox_show_password" />

            <TextView
                android:id="@+id/password_different"
                android:text="@string/textview_password_different"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="50px"
                android:layout_marginLeft="50px"
                android:layout_marginEnd="50px"
                android:layout_marginRight="50px"
                android:textColor="#FF0000"
                android:singleLine="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="50px"
        android:layout_marginLeft="50px"
        android:layout_marginEnd="50px"
        android:layout_marginRight="50px">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_reg_input_captcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" >

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/reg_input_captcha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:digits="1234567890"
                android:singleLine="true"
                android:hint="@string/edittexthint_input_captcha"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/get_captcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_get_captcha"
            android:layout_weight="2"  />
    </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tip_login"
            android:text="@string/textview_tip_login"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <Button
            android:id="@+id/go_to_login"
            android:text="@string/button_login"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50px"
        android:layout_marginLeft="50px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tip_reset_password"
            android:text="@string/textview_tip_reset_password"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <Button
            android:id="@+id/go_to_reset_password"
            android:text="@string/button_reset_password"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>
        </LinearLayout>


            <Button
                android:id="@+id/reinput_email"
                android:text="@string/button_reinput_email"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"/>

        </LinearLayout>
            <TextView
                android:id="@+id/reg_input_content_empty"
                android:text="@string/textview_input_content_empty"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="50px"
                android:layout_marginLeft="50px"
                android:layout_marginEnd="50px"
                android:layout_marginRight="50px"
                android:textColor="#FF0000"
                android:visibility="gone"
                android:singleLine="true"/>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50px"
        android:layout_marginLeft="50px"
        android:layout_marginEnd="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="30px"
        android:text="@string/button_register" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>