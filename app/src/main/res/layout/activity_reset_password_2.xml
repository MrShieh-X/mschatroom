<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_rp_input_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:layout_marginStart="50px"
        android:layout_marginLeft="50px"
        android:layout_marginEnd="50px"
        android:layout_marginRight="50px">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/rp_input_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="@string/edittexthint_input_new_password"
            android:digits="qwertyuiopasdfghjklzxcvbnm1234567890_QWERTYUIOPASDFGHJKLZXCVBNM"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_rp_input_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_marginStart="50px"
        android:layout_marginLeft="50px"
        android:layout_marginEnd="50px"
        android:layout_marginRight="50px">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/rp_input_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edittexthint_reg_confirm_password"
            android:singleLine="true"
            android:digits="qwertyuiopasdfghjklzxcvbnm1234567890_QWERTYUIOPASDFGHJKLZXCVBNM"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <CheckBox
        android:id="@+id/rp_show_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50px"
        android:layout_marginLeft="50px"
        android:layout_marginEnd="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="30px"
        android:text="@string/checkbox_show_password" />

    <Button
        android:id="@+id/rp_reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_reset_password"
        android:layout_marginTop="50px"
        android:layout_marginStart="50px"
        android:layout_marginLeft="50px"
        android:layout_marginEnd="50px"
        android:layout_marginRight="50px"/>

</LinearLayout>